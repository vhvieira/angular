{
  "extends": [
    "tslint:recommended"
  ],
  "rulesDirectory": ["codelyzer"],
  "rules": {
    "arrow-parens": false,
    "curly": false,
    "jsdoc-format": false,
    "import-blacklist": [true, "rxjs", "rxjs/Rx"],
    "trailing-comma": [false, {"multiline": "always", "singleline": "never"}],
    "indent": [true, "spaces", 2],
    "interface-name": [false],
    "interface-over-type-literal": true,
    "max-classes-per-file": [false],
    "max-line-length": [true, 120],
    "member-access": [false],
    "no-console": [true,
      "log",
      "debug",
      "info",
      "warn",
      "error"
    ],
    "no-inferrable-types": [true],
    "no-string-literal": false,
    "no-use-before-declare": true,
    "no-var-keyword": false,
    "object-literal-sort-keys": false,
    "only-arrow-functions": [false],
    "one-variable-per-declaration": [false],
    "ordered-imports": [false],
    "quotemark": [true, "single", "avoid-escape"],
    "space-before-function-paren": false,

    "angular-whitespace": [true, "check-semicolon"],
    "banana-in-box": true,
    "component-selector": [true, "element", "mc", "kebab-case"],
    "contextual-life-cycle": true,
    "component-class-suffix": true,
    "directive-class-suffix": true,
    "directive-selector": [true, "attribute", "mc", "camelCase"],
    "i18n": [true, "check-id", "check-text"],
    "no-attribute-parameter-decorator": true,
    "no-forward-ref": false,
    "no-import-side-effect": true,
    "no-input-rename": true,
    "no-output-named-after-standard-event": true,
    "no-output-on-prefix": true,
    "no-output-rename": true,
    "no-unused-css": true,
    "pipe-impure": true,
    "templates-no-negated-async": true,
    "trackBy-function": true,
    "use-host-property-decorator": true,
    "use-input-property-decorator": true,
    "use-life-cycle-interface": true,
    "use-output-property-decorator": true,
    "use-pipe-transform-interface": true,
    "use-view-encapsulation": true
  }
}

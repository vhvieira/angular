{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
		"declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": true,
    "strict": true,
		"suppressImplicitAnyIndexErrors": true,
		"target": "es2015",
		"plugins": [
      {
        "name": "tslint-language-service",
        "ignoreDefinitionFiles": true
      }
    ],
    "lib": [
      "es2017",
      "dom"
    ]
	}
}
